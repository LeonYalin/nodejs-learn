{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {},
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "no-restricted-syntax": [2, "LabeledStatement", "WithStatement"],
        "no-underscore-dangle": [2, { "allow": ["_id", "__basedir"] }],
        "new-cap": [2, { "newIsCapExceptions": ["autoComplete", "Router"] , "properties": false }],
        "max-len": [2, { "code": 130 }]
    },
    "plugins": ["json", "html"]
}